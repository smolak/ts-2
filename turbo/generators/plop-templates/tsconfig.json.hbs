{
  "extends": "@repo/typescript-config/{{#if (eq packageType "react")}}react{{else}}base{{/if}}.json",
  "compilerOptions": {
    "paths": {
      "{{packageName}}/*": ["./src/*"]
    },
    "baseUrl": ".",
    "outDir": "dist"{{#if isTestPackage}},
    "types": ["vitest/globals"]{{/if}}
  },
  "include": ["src/**/*"{{#if isTestPackage}}, "../tests-setup/src/vitest-jest-extended.d.ts"{{/if}}],
  "exclude": ["node_modules", "dist"]
}
